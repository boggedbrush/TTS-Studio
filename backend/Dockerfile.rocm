# ROCm base image for AMD GPUs
FROM rocm/pytorch:rocm7.1_ubuntu22.04_py3.10_pytorch_release_2.9.1

# Install dependencies
RUN apt-get update && apt-get install -y \
    libsndfile1 \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements (excluding torch as it's in base image)
COPY requirements.txt .

# Install dependencies strictly avoiding torch upgrades
# 1. Remove torch/torchvision/torchaudio/flash-attn from requirements.txt
# 2. Install remaining requirements
# 3. Install qwen-tts without dependencies to avoid triggering torch upgrade
# 4. Manually install qwen-tts dependencies that are missing (excluding torch)
RUN sed -i '/torch/d;/flash-attn/d' requirements.txt && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir --no-deps qwen-tts>=0.0.5 && \
    pip install --no-cache-dir transformers accelerate gradio librosa

# Copy application code
COPY . .

# Expose port
EXPOSE 8000

# Run the application
CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
